# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# User specific environment
if ! [[ "$PATH" =~ "$HOME/.local/bin:$HOME/bin:" ]]
then
    PATH="$HOME/.local/bin:$HOME/bin:$PATH"
fi
export PATH

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

export MAVEN_HOME="/usr/local/maven"

export GOROOT=/usr/local/go
export GOPATH=$HOME/go/lib:$HOME/go/work
export GOPROXY=https://goproxy.cn,direct

export PATH=$PATH:$MAVEN_HOME/bin:$GOROOT/bin

alias vi=nvim
alias vim=nvim

shopt -s cdspell

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/admin/opt/conda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/admin/opt/conda3/etc/profile.d/conda.sh" ]; then
        . "/home/admin/opt/conda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/admin/opt/conda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

if [[ -n "$TMUX" ]]; then
	echo ""
	clear
fi

