# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# User specific environment
if ! [[ "$PATH" =~ $HOME/.local/bin:$HOME/bin: ]]; then
	PATH="$HOME/.local/bin:$HOME/bin:$PATH"
fi
export PATH

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"                   # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion" # This loads nvm bash_completion
# end nvm

# go
export GOROOT=/usr/local/go
export GOPATH=$HOME/go/lib:$HOME/go/work
export GOPROXY=https://goproxy.cn,direct
export PATH=$GOROOT/bin:$PATH
# end go

# alias
alias vi=nvim
alias vim=nvim
# end alias

shopt -s cdspell

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('$HOME/opt/conda3/bin/conda' 'shell.bash' 'hook' 2>/dev/null)"
if [ $? -eq 0 ]; then
	eval "$__conda_setup"
else
	if [ -f "$HOME/opt/conda3/etc/profile.d/conda.sh" ]; then
		. "$HOME/opt/conda3/etc/profile.d/conda.sh"
	else
		export PATH="$HOME/opt/conda3/bin:$PATH"
	fi
fi
unset __conda_setup
# <<< conda initialize <<<

if [[ -n "$TMUX" ]]; then
	echo ""
	clear
fi

source "$HOME/.config/private/env"

# cargo
. "$HOME/.cargo/env"
# end cargo

# kitty
export DISPLAY=:0
export GTK_IM_MODULE=fcitx5
export QT_IM_MODULE=fcitx5
export XMODIFIERS=@im=fcitx5
# export GLFW_IM_MODULE=fcitx5
export GLFW_IM_MODULE=ibus
export XDG_SESSION_TYPE=x11
export GDK_BACKEND=x11
export QT_QPA_PLATFORM=xcb
unset WAYLAND_DISPLAY
nohup fcitx5 -d >/dev/null 2>&1 &
# export IBUS_USE_SYSTEMD=0
# unset WAYLAND_DISPLAY
# ibus-daemon -drx &
export XCURSOR_THEME="BocchiCursor"
# end kitty

# brew
eval "$("$HOME/.local/brew/bin/brew" shellenv)"
# end brew

# rustup
export RUSTUP_DIST_SERVER="https://mirrors.ustc.edu.cn/rust-static"
export RUSTUP_UPDATE_ROOT="https://mirrors.ustc.edu.cn/rust-static/rustup"
# end rustup

# mise
eval "$(~/.local/bin/mise activate bash)"
# end mise

# sdkman
#THIS MUST BE AT THE END OF THE FILE FOR SDKMAN TO WORK!!!
export SDKMAN_DIR="$HOME/.sdkman"
[[ -s "$HOME/.sdkman/bin/sdkman-init.sh" ]] && source "$HOME/.sdkman/bin/sdkman-init.sh"
# end sdkman
